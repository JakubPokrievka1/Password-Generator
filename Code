#!/usr/bin/python3

def input_validation():
    try:
        value = int(input(">> "))
        return value

    except ValueError:
        return "ValueError"
        
    except KeyboardInterrupt:
        return "KeyboardInterrupt"



def how_many_passwords():
    print("How many passwords do you want to generate?")
    the_integer = input_validation()

    if the_integer == "KeyboardInterrupt":
        print("Keyboard Interrupt!")

        return "KeyboardInterrupt"
    
    elif the_integer == "ValueError":
        print("Error: Value Error")

        return "ValueError"

    elif the_integer <= 0:
        print("Error: Value Cannot Be Less Than 1.")
        
        return "LessThanOne"
    
    else:
        return the_integer



def how_long_passwords():
    print("How long should the generated passwords be?")
    the_integer = input_validation()

    if the_integer == "KeyboardInterrupt":
        print("Keyboard Interrupt!")

        return "KeyboardInterrupt"
    
    elif the_integer == "ValueError":
        print("Error: Value Error")

        return "ValueError"

    elif the_integer <= 0:
        print("Error: Value Cannot Be Less Than 1.")
        
        return "LessThanOne"
    
    else:
        return the_integer


def error_handling():
    try:
        how_many = 0
        the_length = 0
        
        return_password = True

        for i in range(2):
            if i == 0:
                the_amount_to_generate = how_many_passwords()

                if the_amount_to_generate != "ValueError" and the_amount_to_generate != "KeyboardInterrupt" and the_amount_to_generate != "LessThanOne":
                    how_many += the_amount_to_generate
                else:
                    return_password = False 
                    break

            else:
                the_length_to_generate = how_long_passwords()

                if the_length_to_generate != "ValueError" and the_length_to_generate != "KeyboardInterrupt" and the_length_to_generate != "LessThanOne":
                    the_length += the_length_to_generate
                else:
                    return_password = False 
                    break
        
        if return_password == True:
            password_generation(how_many, the_length)
        

    except KeyboardInterrupt:
        print("Keyboard Interrupt!")



def password_generation(how_many, the_length):
    import random
    
    try:
        the_characters_for_password = []
        type_of_symbol = "luio"
        how_many = how_many
        the_length = the_length

        if how_many_passwords == 1:
            print("Generated Password:-")
        else:
            print("Generated Passwords:-")
            for p in range(how_many):
                for l in range(the_length):
                    password_character_choosing = random.choice(type_of_symbol)
                        
                    if password_character_choosing == "l":
                        the_characters_for_password.append(random.choice("qwertyuiopasdfghjklzxcvbnm"))
                    elif password_character_choosing == "u":
                        the_characters_for_password.append(random.choice("QWERTYUIOPASDFGHJKLZXCVBNM"))
                    elif password_character_choosing== "i":
                        the_characters_for_password.append(random.choice("1234567890"))
                    else:
                        the_characters_for_password.append(random.choice("!Â£$%^&*()_-=[]{.};:<>,.|'@'?~#+/"))
                    
                print(f"The password: {''.join(the_characters_for_password)}")
                the_characters_for_password.clear()
    
    except KeyboardInterrupt:
        print("Keyboard Interrupt!")



def main():
    error_handling()



main()

